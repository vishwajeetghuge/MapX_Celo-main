<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PrivateActivity">

    <ImageView
            android:id="@+id/ceedilogoscotor"
            android:layout_width="wrap_content"
            android:layout_height="250dp"

            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/celo"
            tools:ignore="ContentDescription"
            android:scaleType="fitCenter" />

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Your Public Key"
            android:id="@+id/privatekey"

            android:layout_below="@+id/ceedilogoscotor"
            android:minHeight="48dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp" />
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Your Latitude"
            android:id="@+id/lat"

            android:layout_below="@+id/privatekey"
            android:minHeight="48dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp" />

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Your Longitude"
            android:id="@+id/longtitude"

            android:layout_below="@+id/lat"
            android:minHeight="48dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp" />

    <Button
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/longtitude"
            android:layout_centerHorizontal="true"
            android:text="SUBMIT"
            android:backgroundTint="#EEC768"
            android:layout_marginTop="10dp" />
</RelativeLayout>